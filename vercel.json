{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],

  "env": {
    "DATABASE_URL": "sqlite:///db.sqlite",
    "SECRET_KEY": "your_secret_key",
    "PIP_NO_CACHE_DIR": "false",
    "PIP_DISABLE_PIP_VERSION_CHECK": "true"
  }
}

