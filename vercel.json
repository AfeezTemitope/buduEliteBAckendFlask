{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.8"
    }
  },
  "env": {

    "DATABASE_URL": "sqlite:///db.sqlite",
    "SECRET_KEY": "your_secret_key"
  }
}